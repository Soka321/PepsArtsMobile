<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PepsArts_Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PepsArts_Mobile.Views"
    xmlns:local="clr-namespace:PepsArts_Mobile"

    Title="PepsArts_Mobile">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
Title="View Exhibitions"
ContentTemplate="{DataTemplate views:ViewExhibitions}"
Route="ViewExhibitions" />
    
    <ShellContent
Title="View Art Pices"
ContentTemplate="{DataTemplate views:ViewArtPieces}"
Route="ViewArtPieces" />

    <ShellContent
    Title="Exhibition Detail"
    ContentTemplate="{DataTemplate views:ExibitionDetails}"
    Route="ExibitionDetails" />
    
    


</Shell>
