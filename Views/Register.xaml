<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PepsArts_Mobile.Views.Register"
             Title="Register">
    <VerticalStackLayout>
        <Label 
            Text=" Register here !"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <VerticalStackLayout Spacing="10" Padding="20">
            <Label 
        Text="Register Here!"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
            <Entry Placeholder="Please Provide your name" x:Name="Name"   HorizontalOptions="Center"  />
            <Entry  Placeholder="Please Provide your surname"  HorizontalOptions="Center" x:Name="Surname" />
            <Entry Placeholder="Please Provide your gender" HorizontalOptions="Center" x:Name="Gender"  />
            <Entry  Placeholder="Plesae Provide your phone number"  HorizontalOptions="Center" x:Name="PhoneNumber" />
            <Entry Placeholder="Please Provide your age" x:Name="Age"  HorizontalOptions="Center" />
            <Entry Placeholder="Please Provide you email address" x:Name="Email"   HorizontalOptions="Center" />
            <Entry IsPassword="True" Placeholder="Please Provide your password"  x:Name="Password"  HorizontalOptions="Center"/>
            
            

            <Button  Text="Register"  Clicked="OnRegister"/>

            <Label Text="" x:Name="lblError" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>