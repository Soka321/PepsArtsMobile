<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PepsArts_Mobile.Views.RegisterExhibition"
             xmlns:local ="clr-namespace:PepsArts_Mobile.ViewModels"
             Title="RegisterExhibition">
    <VerticalStackLayout>
        <Label 
            Text="Register here for exhibition"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Label> Number of Attendees coming?</Label>
            <Entry Placeholder="Please Provide number of Attendess" x:Name="NumAttendees"  Keyboard ="Numeric" />
            
            <Button  Text="Register For Exhibition"  Clicked ="RegExhibition"/>
        <Label Text="{Binding Message}" x:Name="lblError" TextColor="red" />
        
    </VerticalStackLayout>
</ContentPage>