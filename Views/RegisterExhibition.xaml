<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PepsArts_Mobile.Views.RegisterExhibition"
             xmlns:local ="clr-namespace:PepsArts_Mobile.ViewModels"
             Title="RegisterExhibition">
    <VerticalStackLayout>
        <Label 
            Text="Register here for exhibition"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        

            <Entry Placeholder="Please Provide number of Attendess" x:Name="NumAttendees"  Keyboard ="Numeric" />
            <Entry IsPassword="True" Placeholder="Plesae Provide Date" x:Name="Date" />

            <Button  Text="Register For Exhibition"  Clicked ="OnExhibitionRegister"/>
            <Label Text="" x:Name="lblError" />
        
    </VerticalStackLayout>
</ContentPage>