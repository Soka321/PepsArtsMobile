<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PepsArts_Mobile.Views.ViewArtPieces"
             xmlns:local ="clr-namespace:PepsArts_Mobile.ViewModels"
             Title="ViewArtPieces">
    <ContentPage.BindingContext>
        <local:ArtpieceVM/>
    </ContentPage.BindingContext>

    <ScrollView>

        <VerticalStackLayout>
        <Label 
            Text="Our Art Pieces"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <CollectionView ItemsSource="{Binding Artpieces}"   SelectionMode="Single"  SelectionChanged = "OnSelectionChanged" x:Name="ExhibitionList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>



                        <Border  Padding="10" Margin="5" >
                            <VerticalStackLayout>



                                <Label Text="{Binding Title}"  FontAttributes="Bold" FontSize="18"/>
                                <Label Text="{Binding Description}"  FontSize="14"/>
                                <Label Text="{Binding Estimated_Value}"  FontSize="14"/>
                                <Label Text="{Binding Status}"  FontSize="14"/>
                                <ImageButton Source="{Binding Image_Url}"/>

                                <Label Text="{Binding DateCreated, StringFormat='Start: {0:dd MMM yyyy}'}"  FontSize="14"/>
                                
                                <Image Source="art5.jpg" />


                                

                            </VerticalStackLayout>
                            



                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>



        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>