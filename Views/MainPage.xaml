<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PepsArts_Mobile.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Welcome to Pep's Arts" Style="{StaticResource Headline}"
SemanticProperties.HeadingLevel="Level1"  />
            <Image
                Source="home.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Offical peps Arts, Art Gallery Website" />


            

            <Button
                x:Name="btnLogin"
                Text="Login" 
                SemanticProperties.Hint="Logs user to the system"
                Clicked="OnLogin"
                HorizontalOptions="Fill" />

            <Button
    x:Name="btnExhibition"
    Text="View Exhibitions" 
    SemanticProperties.Hint="Logs user to the system"
    Clicked="OnExhibition"
    HorizontalOptions="Fill" />
            <Label x:Name="lblError" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
